<% content_for :title, "Tasks" %>

<div>

  <div class="flex flex-col gap-4 mt-6 mb-10 px-6 mx-auto max-w-3xl">
    <turbo-frame id="new_task_form">
      <%= render partial: "tasks/components/form", locals: { task: Task.new } %>
    </turbo-frame>
  </div>

  <div id="incomplete_tasks" class="mx-auto max-w-3xl">
    <%= render partial: "tasks/task_list", locals: { tasks: @tasks } %>
  </div>
</div>
