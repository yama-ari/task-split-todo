<%= turbo_stream.replace "task_#{@task.id}" do %>
  <%= render partial: "tasks/components/task_row", locals: { task: @task } %>
<% end %>

<%= turbo_stream.replace "done_list" do %>
  <%= render partial: "tasks/done_list", locals: {
    done_tasks_by_date: @done_tasks_by_date
  } %>
<% end %>

<%= turbo_stream.replace "tasks" do %>
  <%= render partial: "tasks/task_list", locals: {
    tasks: current_user.tasks.where(is_done: :not_started).order(:position)
  } %>
<% end %>
