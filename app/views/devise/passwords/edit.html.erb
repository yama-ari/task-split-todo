<h2 class="text-2xl font-bold mb-6 text-center"><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('.new_password'), class: "block font-medium" %>
    <% if @minimum_password_length %>
      <p class="text-sm text-gray-500 mb-1">
        <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
      </p>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.confirm_new_password'), class: "block font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: "w-full mt-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>
