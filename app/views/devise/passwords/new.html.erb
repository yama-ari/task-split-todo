<h2 class="text-2xl font-bold mb-6 text-center"><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, nil, class: "block font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>
