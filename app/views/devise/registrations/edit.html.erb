
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="text-2xl font-bold mb-6 text-center">
    <%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %>
  </h2>

  <div class="field">
    <%= f.label :email, nil, class: "block font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-gray-500">
      <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "block font-medium" %>
    <p class="text-sm text-gray-500 mb-1">
      <%= t('.leave_blank_if_you_don_t_want_to_change_it') %>
    </p>
    <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "block font-medium" %>
    <p class="text-sm text-gray-500 mb-1">
      <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
    </p>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update'), class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>

<div class="space-y-4 my-6 text-sm text-gray-700">
  <%= button_to t('.cancel_my_account'), registration_path(resource_name),
        method: :delete,
        data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') },
        class: "w-full bg-red-600 hover:bg-red-500 text-white font-semibold py-2 px-4 rounded-md" %>

  <%= link_to t('devise.shared.links.back'), :back,
      class: "w-full block text-center bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-md shadow" %>
</div>
<% end %>