
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <h2 class="text-2xl font-bold mb-6 text-center"><%= t('.sign_up') %></h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, nil, class: "block font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password, nil, class: "block font-medium" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500 mt-1" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, nil, class: "block font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500 mt-1" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>
