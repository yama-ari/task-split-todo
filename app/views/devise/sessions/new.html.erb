
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
<h2 class="text-2xl font-bold mb-6 text-center"><%= t('.sign_in') %></h2>
  <div class="field">
    <%= f.label :email, class: "block font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block font-medium" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-blue-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-sm" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "w-full mt-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>
